{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe') }}
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button class="btn btn-primary">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
