{% extends 'base.html.twig' %}

{% block title %}Schedules{% endblock %}

{% block body %}
    <h1>Schedules</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schedule.id }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ schedule.day }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ schedule.date }}</td>
            </tr>
            <tr>
                <th>Opening</th>
                <td>{{ schedule.opening ? schedule.opening|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Closing</th>
                <td>{{ schedule.closing ? schedule.closing|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_schedule_index') }}">back to the list</a>

    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>

    {{ include('schedule/_delete_form.html.twig') }}
{% endblock %}
