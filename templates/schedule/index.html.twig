{% extends 'base.html.twig' %}

{% block title %}Schedule index{% endblock %}

{% block body %}
    <h1>Schedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Lunch Opening</th>
                <th>Lunch Closing</th>
                <th>Dinner Opening</th>
                <th>Dinner Closing</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.id }}</td>
                <td>{{ schedule.day }}</td>
                <td>{{ schedule.date }}</td>
                <td>{{ schedule.lunchOpening ? schedule.lunchOpening|date('H:i:s') : '' }}</td>
                <td>{{ schedule.lunchClosing ? schedule.lunchClosing|date('H:i:s') : '' }}</td>
                <td>{{ schedule.dinnerOpening ? schedule.dinnerOpening|date('H:i:s') : '' }}</td>
                <td>{{ schedule.dinnerClosing ? schedule.dinnerClosing|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_schedule_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_schedule_new') }}">Create new</a>
{% endblock %}
