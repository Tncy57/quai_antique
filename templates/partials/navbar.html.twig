{% extends 'base.html.twig' %}

{% block body %}
  <header>
  <div class="container-fluid"> 
    <nav class="navbar navbar-expand-lg navbar-light d-flex justify-content-center flex-md-row flex-sm-column py-sm-5">
      <a class="navbar-brand" href="{{ path('app_home') }}">
        Quai Antique
      </a>
      <button class="navbar-toggler mt-sm-5" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
              aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mt-5">
          <li class="nav-item"><a class="nav-link" style="font-family: 'Montserrat', sans-serif;" href="{{ path('app_home') }}">Accueil</a></li>
          <li class="nav-item"><a class="nav-link" style="font-family: 'Montserrat', sans-serif;" href="{{ path('app_dish') }}">La carte</a></li>
          <li class="nav-item"><a class="nav-link" style="font-family: 'Montserrat', sans-serif;" href="#">Contact</a></li>
          {% if app.user %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">
                    <button class="btn btn-primary">Se déconnecter</button>
                </a>
            </li>
          {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">
                    <button class="btn btn-outline-primary">Se connecter</button>
                </a>
            </li>
          {% endif %}
        </ul>
        <a class="book mt-5" href="{{ path('app_reservation') }}">Réserver</a>
      </div>
    </nav>
  </div>
  </header>
{% endblock %}

